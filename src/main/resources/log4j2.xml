<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" strict="true" schema="Log4J-V2.8.xsd">
    <Properties>
        <Property name="PID">????</Property>
        <Property name="LOG_EXCEPTION_CONVERSION_WORD">%xwEx</Property>
        <Property name="LOG_LEVEL_PATTERN">%5p</Property>
        <Property name="LOG_DATEFORMAT_PATTERN">yyyy-MM-dd HH:mm:ss.SSS</Property>
        <Property name="file_name" value="%d{yyyy-MM-dd}-%i.log"/>
        <Property name="CONSOLE_LOG_PATTERN">%clr{%d{${LOG_DATEFORMAT_PATTERN}}}{faint} %clr{${LOG_LEVEL_PATTERN}}
            %clr{${sys:PID}}{magenta} %clr{---}{faint} %clr{[%15.15t]}{faint} %clr{%-40.40c{1.}}{cyan} %clr{:}{faint}
            %m%n${sys:LOG_EXCEPTION_CONVERSION_WORD}
        </Property>
        <Property name="FILE_LOG_PATTERN">%d{${LOG_DATEFORMAT_PATTERN}} ${LOG_LEVEL_PATTERN} ${sys:PID} --- [%t]
            %-40.40c{1.} : %m%n${sys:LOG_EXCEPTION_CONVERSION_WORD}
        </Property>
        <!--<Property name="log.path" value="/root/logging/logs/"/>-->
        <Property name="log.path" value="logs"/>
        <Property name="log.level" value="INFO"/>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${sys:CONSOLE_LOG_PATTERN}"/>
        </Console>


        <RollingFile name="baseAppender" fileName="${log.path}/base.log" filePattern="${log.path}/base-${file_name}"
                     immediateFlush="false">
            <PatternLayout>
                <pattern>%d{yyyy-MM-dd HH:mm:ss,SSS} %-5p [%t] %C{1.}(%L) - %m%n</pattern>
            </PatternLayout>
            <Policies>
                <!---->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="100MB"/>
            </Policies>
            <DefaultRolloverStrategy max="7"/>
            <Filters>
                <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="NEUTRAL"/>
            </Filters>
        </RollingFile>

        <RollingFile name="requestAppender" fileName="${log.path}/request.log"
                     filePattern="${log.path}/request-${file_name}" immediateFlush="false">
            <PatternLayout>
                <pattern>${FILE_LOG_PATTERN}</pattern>
            </PatternLayout>
            <Policies>
                <!---->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="100MB"/>
            </Policies>
            <DefaultRolloverStrategy max="7"/>
            <Filters>
                <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="NEUTRAL"/>
            </Filters>
        </RollingFile>

        <RollingFile name="notifyAppender" fileName="${log.path}/notify.log"
                     filePattern="${log.path}/notify-${file_name}" immediateFlush="false">
            <PatternLayout>
                <pattern>${FILE_LOG_PATTERN}</pattern>
            </PatternLayout>
            <Policies>
                <!---->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="100MB"/>
            </Policies>
            <DefaultRolloverStrategy max="7"/>
            <Filters>
                <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="NEUTRAL"/>
            </Filters>
        </RollingFile>

        <RollingFile name="errorAppender" fileName="${log.path}/error.log" filePattern="${log.path}/error-${file_name}"
                     immediateFlush="false">
            <PatternLayout>
                <pattern>${FILE_LOG_PATTERN}</pattern>
            </PatternLayout>
            <Policies>
                <!---->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="100MB"/>
            </Policies>
            <DefaultRolloverStrategy max="7"/>
            <Filters>
                <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="NEUTRAL"/>
            </Filters>
        </RollingFile>
    </Appenders>

    <Loggers>
        <logger name="base" level="info" additivity="false">
            <AppenderRef ref="baseAppender"/>
        </logger>

        <logger name="request" level="info" additivity="false">
            <AppenderRef ref="requestAppender"/>
        </logger>

        <logger name="notify" level="info" additivity="false">
            <AppenderRef ref="notifyAppender"/>
        </logger>

        <logger name="error" level="error" additivity="false">
            <AppenderRef ref="errorAppender"/>
        </logger>

        <Logger name="org.apache.catalina" level="info"/>
        <Logger name="io.undertow" level="info"/>
        <Logger name="org.springframework" level="info"/>
        <Logger name="net.sf.ehcache" level="info"/>
        <Logger name="com.zaxxer.hikari" level="info"/>

        <Logger name="org.apache.catalina.startup.DigesterFactory" level="error"/>
        <Logger name="org.apache.catalina.util.LifecycleBase" level="error"/>
        <Logger name="org.apache.coyote.http11.Http11NioProtocol" level="warn"/>
        <logger name="org.apache.sshd.common.util.SecurityUtils" level="warn"/>
        <Logger name="org.apache.tomcat.util.net.NioSelectorPool" level="warn"/>
        <Logger name="org.eclipse.jetty.util.component.AbstractLifeCycle" level="error"/>
        <Logger name="org.hibernate.validator.internal.util.Version" level="warn"/>
        <logger name="org.springframework.boot.actuate.endpoint.jmx" level="warn"/>
        <Root level="DEBUG">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
